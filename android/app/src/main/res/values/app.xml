<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- 余白関連 -->
  <dimen name="app_space_1">8dp</dimen>
  <dimen name="app_space_2">16dp</dimen>
  <dimen name="app_space_3">24dp</dimen>
