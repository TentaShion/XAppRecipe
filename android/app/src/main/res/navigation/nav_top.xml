<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_top"
    app:startDestination="@id/top_link_index">

    <!-- ホーム -->
    <fragment
        android:id="@+id/top_home"
        android:name="work.shion.xapprecipe.pages.home.MainFragment"
        tools:layout="@layout/pages_home" />

    <!-- リンク一覧 -->
    <fragment
        android:id="@+id/top_link_index"
        android:name="work.shion.xapprecipe.pages.link_index.MainFragment"
        tools:layout="@layout/pages_link_index" />

    <!-- 地図(WEB 版) -->
    <fragment
        android:id="@+id/top_map_web"
        android:name="work.shion.xapprecipe.pages.map_web.MainFragment"
        tools:layout="@layout/pages_map_web" />

    <!-- サンプル -->
    <fragment
        android:id="@+id/top_sample"
        android:name="work.shion.xapprecipe.pages.sample.MainFragment"
        tools:layout="@layout/pages_sample" />


    <!-- ホームへ遷移 -->
    <action
        android:id="@+id/navact_top_to_home"
        app:destination="@id/top_home"
        app:popUpTo="@id/nav_top" />

    <!-- リンク一覧へ遷移 -->
    <action
        android:id="@+id/navact_top_to_link_index"
        app:destination="@id/top_link_index"
        app:popUpTo="@id/nav_top" />

    <!-- 地図(WEB 版) へ遷移 -->
    <action
        android:id="@+id/navact_top_to_map_web"
        app:destination="@id/top_map_web"
        app:popUpTo="@id/nav_top" />

    <!-- サンプルへ遷移 -->
    <action
        android:id="@+id/navact_top_to_sample"
        app:destination="@id/top_sample"
        app:popUpTo="@id/nav_top" />
</navigation>
