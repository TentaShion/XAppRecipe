{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve",
      "command": "ionic",
      "args": [
        "serve",
        "--host",
        "localhost",
        "--no-open",
        "--port",
        "8100"
      ],
      "isBackground": true,
      "problemMatcher": {
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": ".*Development server running!.*",
        },
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
      },
      "type": "shell",
    }
  ]
}